extends layout

block content
    a(href="/admin")
        button(type="button" class="button_small") Back to admin
    h2= title

    //- this form is set up to make a POST request. This will post our data so we can use it in our controller. The action is empty, so this it will post our data to the current route (in this case '/admin/add').
    form(action="" method="POST")
        .form_input
            label(for="hotel_name") Hotel name:
            input(type="text" name="hotel_name" required)
        .form_input
            label(for="hotel_description") Hotel description:
            textarea(name="hotel_description" id="hotel_description" cols="30" rows="10" required)
        .form_input
            label(for="image") Hotel image
            input(type="file" name="image" id="image")
        .form_input
            label(for="star_rating") Star rating:
            input(type="number" name="star_rating" min="1" max="5" required)
        .form_input
            label(for="country") Country:
            input(type="text" name="country" id="country" required)
        .form_input
            label(for="cost_per_night") Cost per night:
            input(type="number" name="cost_per_night" id="cost_per_night" required)
        .form_input
            label(for="available") Available:
            input(type="radio" id="available" name="available" value="true" checked)
        .form_input
            label(for="unavailable") Unavailable:
            input(type="radio" id="unavailable" name="unavailable" value="flase")
        .form_input
            button(type="submit" class="button_small") CONFIRM